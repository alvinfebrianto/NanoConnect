{
  "name": "nanoconnect-app",
  "version": "1.0.0",
  "description": "NanoConnect - SME & Nano Influencer Matching Platform",
  "build": {
    "command": "npm install && npm run build",
    "output": "dist"
  },
  "functions": {
    "directory": "node-functions",
    "runtime": "nodejs18"
  },
  "edge_functions": {
    "directory": "edge-functions"
  },
  "routes": [
    {
      "src": "/api/influencers/featured",
      "dest": "/node-functions/influencers/featured"
    },
    {
      "src": "/api/influencers/list",
      "dest": "/node-functions/influencers/list"
    },
    {
      "src": "/api/influencers",
      "dest": "/node-functions/influencers/index"
    },
    {
      "src": "/api/reviews",
      "dest": "/node-functions/reviews/index"
    },
    {
      "src": "/api/orders",
      "dest": "/node-functions/orders/index"
    },
    {
      "src": "/api/profile",
      "dest": "/node-functions/profile/index"
    },
    {
      "src": "/api/ai-recommendations",
      "dest": "/node-functions/ai-recommendations/index"
    },
    {
      "src": "/edge/.*",
      "dest": "/edge-functions/$1"
    },
    {
      "src": "/[^.]+",
      "dest": "/index.html"
    }
  ],
  "caches": [
    {
      "source": "/images/*",
      "cacheTtl": 86400
    },
    {
      "source": "/assets/*",
      "cacheTtl": 31536000
    }
  ],
  "headers": [
    {
      "source": "/*",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
